<%= form_for @rate_plan do |f| %>
  <div>
    <%= f.label :product_id, "Product" %>
    <%= f.select :product_id, options_from_collection_for_select(@products, :id, :title, params[:product_id]) %>
  </div>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :start_date %>
    <%= f.text_field :start_date, { readonly: true, value: @rate_plan.start_date } %>
  </div>
  <div>
    <%= f.label :end_date, "Retire Date" %>
    <%= f.text_field :end_date, { readonly: true, value: @rate_plan.end_date } %>
  </div>
  <div>
    <%= f.label :recurrence %>
    <%= f.select :recurrence, options_for_select(RatePlan::RECURRENCE.to_a) %>
  </div>
  <div>
    <%= f.label :price, "Price $" %>
    <%= f.number_field :price, step: '0.01' %>
  </div>
  <%= f.submit "Submit" %>
<% end %>
