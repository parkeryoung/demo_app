<%= link_to "Edit", edit_product_path(@product) %>
<h1><%= @product.title %></h1>
<div>
  Start Date: <span class="start_date"><%= @product.start_date %></span>
</div>
<div>
  End Date: <span class="end_date"><%= @product.end_date %></span>
</div>
<div>
  Description: <span class="description"><%= @product.description %></span>
</div>

<%= link_to("Create New Rate Plan", new_rate_plan_path(product_id: @product.id)) %>
<h2>Rate Plans</h2>
<%= render partial: 'rate_plans/list', locals: { rate_plans: @product.rate_plans } %>
