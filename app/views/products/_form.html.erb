<%= form_for @product do |f| %>
  <% if !@product.start_date || !@product.errors.empty? %>
    <div>
      <%= f.label :active %>
      <%= f.check_box :active, checked: true %>
    </div>
  <% end %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :end_date, "Discontinued As Of: "  %>
    <%= f.text_field :end_date, { readonly: true, value: @product.end_date } %>
  </div>

  <%= f.submit "Submit" %>
<% end %>
